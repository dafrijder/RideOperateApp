<Page
    x:Class="RideOperateApp.ServerListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RideOperateApp"
    Background="#232526">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Titel en knop -->
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <TextBlock Text="RideOperate Servers"
                       FontSize="28"
                       Foreground="#2ecc71"
                       FontWeight="Bold"
                       Margin="0,0,20,0"/>
            <Button Content="➕ Add server"
                    Click="AddServer_Click"
                    Background="#2ecc71"
                    Foreground="White"
                    Padding="12,6"
                    BorderThickness="0"
                    CornerRadius="6"/>
        </StackPanel>

        <!-- Server lijst -->
        <ListView x:Name="ServerList" Grid.Row="1" Margin="0,20,0,0"
                  SelectionMode="None"
                  IsItemClickEnabled="False">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:Server">
                    <Border Background="#2c3e50"
                            CornerRadius="8"
                            BorderThickness="1"
                            BorderBrush="#27ae60"
                            Padding="12"
                            Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Server gegevens -->
                            <StackPanel>
                                <TextBlock Text="{x:Bind Name}"
                                           FontSize="20"
                                           Foreground="#2ecc71"
                                           FontWeight="Bold"/>
                                <TextBlock Text="{x:Bind IpPort}" Foreground="White"/>
                            </StackPanel>

                            <!-- Actieknoppen -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                <Button Content="Open"
                                        Tag="{x:Bind}"
                                        Click="OpenServer_Click"
                                        Background="#27ae60"
                                        Foreground="White"
                                        Padding="8,4"
                                        BorderThickness="0"
                                        CornerRadius="6"/>
                                <Button Content="🗑️"
                                        Tag="{x:Bind}"
                                        Click="DeleteServer_Click"
                                        Background="#e74c3c"
                                        Foreground="White"
                                        Padding="8,4"
                                        BorderThickness="0"
                                        CornerRadius="6"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
